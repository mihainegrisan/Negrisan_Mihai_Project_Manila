@model IEnumerable<Project_Manila.DAL.ViewModels.OrderAndItemsGroup>

@{
  ViewData["Title"] = "Ordered Books Statistics";
}
<h2>Ordered Books Statistics</h2>

<table>
  <tr>
    <th>
      Order Date
    </th>
    <th>
      Ordered Books
    </th>
  </tr>
  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.OrderDate)
      </td>
      <td>
        @item.ItemsPerOrder
      </td>
    </tr>
  }
</table>